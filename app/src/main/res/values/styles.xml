<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="QuizStage">
        <item name="android:layout_height">@dimen/quiz_stage_size</item>
        <item name="android:layout_width">@dimen/quiz_stage_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">@color/colorNeutral</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Option">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="OptionLayout" parent="Option">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionTitle" parent="Option">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="OptionImage" parent="Option">
        <item name="android:layout_height">@dimen/option_image_size</item>
        <item name="android:layout_width">@dimen/option_image_size</item>
    </style>

    <style name="OptionText" parent="Option">>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="AnswerGroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AnswerRadioGroup" parent="AnswerGroup">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AnswerRadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
